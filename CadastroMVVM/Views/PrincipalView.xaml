<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroMVVM.Views.PrincipalView"
             Title="PrincipalView">
    <ScrollView>
        <StackLayout Padding="15">
            <Label Text="Cadastro MVVM"
                   FontSize="30"/>

            <StackLayout Padding="10"/>
            <Label Text="Nome:"/>
            <Entry Text="{Binding Nome}"/>

            <StackLayout Padding="10"/>
            <Label Text="CPF:"/>
            <Entry Text="{Binding CPF}"/>

            <StackLayout Padding="10"/>
            <Label Text="RG:"/>
            <Entry Text="{Binding RG}"/>

            <StackLayout Padding="10"/>
            <Label Text="Telefone:"/>
            <Entry Text="{Binding Telefone}"/>

            <StackLayout Padding="10"/>
            <Label Text="Data Nascimento:"/>
            <DatePicker Date="{Binding DtNascimento}"/>

            <StackLayout Padding="10"/>
            <Label Text="Email:"/>
            <Entry Text="{Binding Email}"/>

            <StackLayout Padding="10"/>
            <Label Text="Endereco:"/>
            <Entry Text="{Binding Endereco}"/>
            
            <StackLayout Padding="10"/>
            <Button Text="Salvar"
                    Command="{Binding CadastrarCommand}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>